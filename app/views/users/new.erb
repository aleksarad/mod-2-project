<h1>Sign Up</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error|%>
        <p><%= error %> </p>
    <% end %>
<% end %>

<%= form_for @user do |f|%>
    <%= f.label 'Name:'%>
    <%= f.text_field :name %> <br>
    <%= f.label 'Username:'%>
    <%= f.text_field :user_name %> <br>
    <%= f.label 'Password:'%>
    <%= f.password_field :password %> <br>
    <%= f.label 'Location:'%>
    <%= f.text_field :location %><br>
    <%= f.label 'Bio:'%>
    <%= f.text_field :bio %><br>
    <%= f.submit 'Create Account' %>
<% end %>