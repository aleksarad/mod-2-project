<h1>Join the Hive</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error|%>
        <section class="error-message"><%= error %> </section>
    <% end %>
<% end %>

<div class="form-container">
    <%= form_for @user do |f|%>
        <section class="label"> <%= f.label 'Name'%> </section>
        <section class="field"> <%= f.text_field :name %> </section>
        <section class="label"> <%= f.label 'Username'%> </section>
        <section class="field"> <%= f.text_field :user_name %> </section>
        <section class="label"> <%= f.label 'Password'%> </section>
        <section class="field"> <%= f.password_field :password %> </section>
        <section class="label"> <%= f.label 'Location'%> </section>
        <section class="field"> <%= f.text_field :location %> </section>
        <section class="label"> <%= f.label 'Bio'%> </section>
        <section class="field"> <%= f.text_field :bio %> </section>
        <section class="submit"> <%= f.submit 'Create Account' %> </section>
    <% end %>
</div>