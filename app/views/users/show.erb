<h1><%= @user.name %>'s Profile</h1>
<%= link_to 'Feed', posts_path %> <br>
<%= link_to 'Edit User', edit_user_path%> <br>
<%= link_to 'Create New Post', new_post_path %>

<p><%= @user.user_name %></p>


<% @user.posts.each do |post| %>
    <p><%= post.content %></p>
    <p><%=post.created_at.strftime("%A, %B %d, %Y, %l:%M %p, %:z") %></p>
    <p><%= link_to 'Edit Post', edit_post_path(post) %></p>
    <p> <%= button_to 'Delete post', post_path(post), method: :delete %></p>
    <hr>
<% end %>