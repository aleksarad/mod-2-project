<h1>Login</h1>

  <% if flash[:error] %>
      <section class="error-message"><%= flash[:error] %></section>
  <% end %>

   <div class="form-container">
         <%= form_tag '/login' do %> </section>
         <section class="label"> <%= label_tag :user_name%> </section>
         <section class="field"> <%= text_field_tag :user_name %> </section>
         <section class="label"> <%= label_tag :password%> </section>
         <section class="field"> <%= password_field_tag :password%> </section>
         <section class="submit"> <%= submit_tag "Login"%> </section>
   </div>
<%end%>